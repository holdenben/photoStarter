@using System.Configuration
@using photoStarter.ServiceLayer
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - photoStarter</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    
        @{
            var uid = ConfigurationManager.AppSettings["DefaultUser"];
            GlobalVal.PhotoCollection = FlickrBLL.GetPublicUserPhotos(uid);
        }
        
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="brand" href="#">photoStarter</a>
                    <div class="nav-collapse collapse">
                        @*<p class="navbar-text pull-right">
                            Login | Logout
                        </p>*@
                        
                        <ul class="nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("WordCloud", "WordCloud", "Home")</li>
                            <li>@Html.ActionLink("About Me", "AboutMe", "Home")</li>
                        </ul>
                        <ul class="nav pull-right">
                            <li class="dropdown">
                                <a class="dropdown-toggle" id="dLabel" role="button" data-toggle="collapse" data-target="#userDetails" href="#" align="right">
                                    Set User
                                    <b class="caret"></b>
                                </a>
                                <div id="userDetails" class="collapse pull-right">
                                    <form>
                                        <div class="input-prepend input-append" style="margin-right: 10px; margin-left: 10px">
                                            <span class="add-on">Flickr User Id</span>
                                            <input class="span2" id="flickrUserId" name="flickrUserId" type="text" value="95501702@N06"/>
                                            <button type="button" class="btn">Go!</button>
                                        </div> 
                                    </form>
                                </div>
                            </li>
                        </ul>

                    </div>
                </div>
            </div>
        </div>
        <div id="body">
            @RenderSection("featured", required: false)
            <div class="container-fluid" style="margin-top: 60px"></div>
            <div class="row-fluid">
                @RenderBody()
            </div>
            </div>
        <footer>
            <p>&copy; @DateTime.Now.Year - photoStarter</p>
        </footer>


    </body>
</html>
